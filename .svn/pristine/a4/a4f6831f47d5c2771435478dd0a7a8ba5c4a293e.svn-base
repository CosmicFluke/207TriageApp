<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView
        android:id="@+id/date_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of arrival:" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        
        <EditText
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Day"
            android:inputType="date" />
        
        <EditText
            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Month"
            android:inputType="date" />
        
        <EditText
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Year"
            android:inputType="date" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/time_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time of arrival:" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
        
        <EditText
            android:id="@+id/hour"
            android:layout_weight="1"
       		android:layout_width="0dp"
        	android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="Hour" />
        
        <EditText
            android:id="@+id/minute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Minute"
            android:inputType="date" />

    </LinearLayout>

    <Button
        android:id="@+id/addVisitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addNewVisit"
        android:text="Add Visit" />
    
</LinearLayout>