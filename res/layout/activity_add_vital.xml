<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_vital_sign_to_add"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/temperature_button"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="@string/temperature" 
    	android:onClick="addTemperature" />

    <RadioButton
        android:id="@+id/heart_rate_button"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="@string/heart_rate" 
        android:onClick="addHeartRate" />

    <RadioButton
        android:id="@+id/blood_pressure_button"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:text="@string/blood_pressure" 
        android:onClick="addBloodPressure" />
    
</LinearLayout>